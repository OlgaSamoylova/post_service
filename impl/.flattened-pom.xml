<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>ru.skillbox.diplom-alpha</groupId>
    <artifactId>microservice-post</artifactId>
    <version>1.0.0-SNAPSHOT</version>
  </parent>
  <groupId>ru.skillbox.diplom-alpha</groupId>
  <artifactId>microservice-post-impl</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <name>SKILLBOX :: DIPLOM :: microservice post :: impl</name>
  <description>microservice post impl</description>
  <properties>
    <sonar.coverage.exclusions>**/Application.kt,
            **/config/DBConfig.kt,</sonar.coverage.exclusions>
  </properties>
  <dependencies>
    <dependency>
      <groupId>ru.skillbox.diplom-alpha</groupId>
      <artifactId>microservice-post-api</artifactId>
      <version>${revision}${sha1}${changelist}</version>
    </dependency>
    <dependency>
      <groupId>ru.skillbox.diplom-alpha</groupId>
      <artifactId>microservice-post-db</artifactId>
      <version>${revision}${sha1}${changelist}</version>
    </dependency>
    <dependency>
      <groupId>ru.skillbox.diplom-alpha</groupId>
      <artifactId>microservice-post-domain</artifactId>
      <version>${revision}${sha1}${changelist}</version>
    </dependency>
    <dependency>
      <groupId>ru.skillbox.diplom-alpha</groupId>
      <artifactId>microservice-account-api</artifactId>
      <version>1.0.0-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>ru.skillbox.diplom-alpha</groupId>
      <artifactId>microservice-friend-api</artifactId>
      <version>1.0.0-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>ru.skillbox.diplom-alpha</groupId>
      <artifactId>microservice-notification-api</artifactId>
      <version>1.0.0-SNAPSHOT</version>
    </dependency>
  </dependencies>
  <build>
    <sourceDirectory>${project.basedir}/src/main/java</sourceDirectory>
    <testSourceDirectory>${project.basedir}/src/test/java</testSourceDirectory>
    <finalName>post-app</finalName>
    <plugins>
      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>repackage</id>
            <goals>
              <goal>repackage</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <mainClass>ru.skillbox.diplom.alpha.microservice.post.Application</mainClass>
          <layout>JAR</layout>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-source-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>11</source>
          <target>11</target>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
