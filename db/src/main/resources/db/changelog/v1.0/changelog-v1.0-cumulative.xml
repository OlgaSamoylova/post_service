<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="Ruslan">
        <createTable tableName="post">
            <column name="id" type="int" autoIncrement="true" startWith="1">
                <constraints primaryKey="true" nullable="false" foreignKeyName="id"/>
            </column>
            <column name="time" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="author_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="post_text" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="is_blocked" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="post_comment">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="time" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="parent_id" type="int"/>
            <column name="comment_text" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="post_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="author_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="is_blocked" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
