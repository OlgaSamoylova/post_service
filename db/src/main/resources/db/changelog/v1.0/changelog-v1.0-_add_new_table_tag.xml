<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="7" author="Olga">

        <createTable tableName="tag">
            <column name="id" type="int" autoIncrement="true" startWith="1">
                <constraints primaryKey="true" nullable="false" foreignKeyName="id"/>
            </column>
            <column name="tag" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="post2tag">
            <column name="id" type="int" autoIncrement="true" startWith="1">
                <constraints primaryKey="true" nullable="false" foreignKeyName="id"/>
            </column>
            <column name="post_id" type="int">
                <constraints nullable="false" foreignKeyName="post_id" references="post (id)"/>
            </column>
            <column name="tag_id" type="int">
                <constraints nullable="false" foreignKeyName="tag_id" references="tag (id)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>